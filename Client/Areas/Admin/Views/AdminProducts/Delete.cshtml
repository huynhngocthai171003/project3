@model Client.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid pt-4 px-4">
        <h3><a asp-action="Delete" asp-controller="AdminProducts" class="mb-0">DELETE PRODUCT</a></h3>
        <hr />
        <h3 class="text-primary">Are you sure you want to delete this?</h3>

        <div>
            <dl class="row">
                <dt style="padding: 10px 0 10px 0;" class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>
                <dd style="padding: 10px 0 10px 0;" class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt style="padding: 10px 0 10px 0;" class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Rate)
                </dt>
                <dd style="padding: 10px 0 10px 0;" class="col-sm-10">
                    @Html.DisplayFor(model => model.Rate)
                </dd>
                <dt style="padding: 10px 0 10px 0;" class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd style="padding: 10px 0 10px 0;" class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt style="padding: 10px 0 10px 0;" class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd style="padding: 10px 0 10px 0;" class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt style="padding: 10px 0 10px 0;" class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Avatar)
                </dt>
                <dd style="padding: 10px 0 10px 0;" class="col-sm-10">
                    <img class="center" src="~/images/@Html.DisplayFor(model => model.Avatar)" style="width:150px; height:auto" />
                </dd>
                <dt style="padding: 10px 0 10px 0;" class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Image1)
                </dt>
                <dd style="padding: 10px 0 10px 0;" class="col-sm-10">
                    <img class="center" src="~/images/@Html.DisplayFor(model => model.Image1)" style="width:150px; height:auto" />
                </dd>
                <dt style="padding: 10px 0 10px 0;" class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Image2)
                </dt>
                <dd style="padding: 10px 0 10px 0;" class="col-sm-10">
                    <img class="center" src="~/images/@Html.DisplayFor(model => model.Image2)" style="width:150px; height:auto" />
                </dd>
                <dt style="padding: 10px 0 10px 0;" class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Image3)
                </dt>
                <dd style="padding: 10px 0 10px 0;" class="col-sm-10">
                    <img class="center" src="~/images/@Html.DisplayFor(model => model.Image3)" style="width:150px; height:auto" />
                </dd>
                <dt style="padding: 10px 0 10px 0;" class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd style="padding: 10px 0 10px 0;" class="col-sm-10">
                    @if (Model.Status == true)
                    {
                            <i style="font-size:40px; color:#C81313" class="fa fa-check" aria-hidden="true"></i>
                    }
                    else
                    {

                            <i style="font-size:40px" class="fa fa-times " aria-hidden="true"></i>

                    }
                </dd>
                <dt style="padding: 10px 0 10px 0;" class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd style="padding: 10px 0 10px 0;" class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="IndexProduct">Back to List</a>
            </form>
        </div>
    </div>
</div>
