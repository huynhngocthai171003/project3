@model IEnumerable<Client.Models.Category>

@{
    ViewData["Title"] = "IndexCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid pt-4 px-4">

        <div class="bg-secondary text-center rounded p-4" style="width:50%">

            <div class="d-flex align-items-center justify-content-between mb-4">
                @*<select class="form-select" style="width:200px" id="txtCatID" name="txtCatID" asp-items="ViewBag.Categories">
                <option selected>Select category</option>
                <option value="all">All</option>
                </select>*@
                <a asp-action="Create" asp-controller="AdminCategories" class="mb-0 btn btn-sm btn-primary">Add Category</a>

            </div>
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                        <tr class="text-white">

                            <th scope="col">CategoryName</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.Name</td>
                                    <td width="40%">
                                        <a class="btn btn-sm btn-primary" asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        <a class="btn btn-sm btn-primary" asp-controller="AdminCategories" asp-action="Details" asp-route-id="@item.Id">Detail</a>
                                        <a class="btn btn-sm btn-primary" asp-controller="AdminCategories" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>

                            }
                        }

                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>



